<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlActivity">

    <!-- 기기 이름 표시 -->
    <TextView
        android:id="@+id/textViewDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="내 작업복"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 센서 디스플레이  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sensorDisplayContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewDeviceName">

        <ImageView
            android:id="@+id/imageViewBody"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="Sensor map"
            android:src="@drawable/ic_body_outline"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Kotlin 코드로 온도 TextView들이 여기에 동적으로 추가됩니다. -->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 현재 온도 및 희망 온도 표시 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTempDisplay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sensorDisplayContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:baselineAligned="false">

            <!-- 현재 온도 패널 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 평균 온도"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewCurrentTemp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="-- °C"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"/>

            <!-- 희망 온도 패널 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/labelTargetTempDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="희망 평균 온도"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewTargetTempDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="-- °C"
                    android:textSize="40sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 목표 온도 설정 패널 -->
    <TextView
        android:id="@+id/labelTargetTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="목표 온도 설정 (18°C ~ 26°C)"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/cardViewTempDisplay"
        app:layout_constraintTop_toBottomOf="@id/cardViewTempDisplay" />

    <EditText
        android:id="@+id/editTextTargetTemp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="온도 입력"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonSendTemp"
        app:layout_constraintStart_toStartOf="@id/labelTargetTemp"
        app:layout_constraintTop_toBottomOf="@id/labelTargetTemp" />

    <Button
        android:id="@+id/buttonSendTemp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="전송"
        app:layout_constraintBottom_toBottomOf="@id/editTextTargetTemp"
        app:layout_constraintEnd_toEndOf="@id/cardViewTempDisplay"
        app:layout_constraintTop_toTopOf="@id/editTextTargetTemp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="냉방  "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/editTextTargetTemp"
        app:layout_constraintTop_toBottomOf="@id/editTextTargetTemp" />

    <TextView
        android:id="@+id/textViewStatusMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/buttonSendTemp"
        app:layout_constraintStart_toStartOf="@id/switchMode"
        app:layout_constraintTop_toBottomOf="@id/switchMode"
        tools:text="상태 메시지가 여기에 표시됩니다." />

</androidx.constraintlayout.widget.ConstraintLayout>